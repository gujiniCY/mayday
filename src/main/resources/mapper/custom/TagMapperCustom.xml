<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.songhaozhi.mayday.mapper.custom.TagMapperCustom">

<select id="selectByarticleId" resultType="java.lang.Integer" parameterType="java.lang.Integer">
SELECT tag_id FROM mayday_article_tag WHERE article_id = #{value}
</select>
<delete id="delete" parameterType="java.lang.Integer">
delete from mayday_article_tag where tag_id in (
<foreach collection="list" item="id" separator=",">
${id}
</foreach>
) and article_id=#{articleId} 
</delete>
</mapper>